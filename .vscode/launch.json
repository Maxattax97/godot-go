{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "lldb-core-it",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/godot_engine/bin/godot.x11.tools.64.llvm",
      "args": [
        "-v",
        "-d",
        "--path",
        "integration_tests/core/project"
      ],
      "env": {
        "cgocheck": "2",
        "GOGC": "1",
        "asyncpremptoff": "1"
      },
      "stopOnEntry": false,
      "preRunCommands": [
      ],
      "initCommands": [
      ],
    },
    {
      "name": "gdb-core-it",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/godot_engine/bin/godot.x11.tools.64.llvm",
      "args": [
        "-v",
        "-d",
        "--path",
        "integration_tests/core/project"
      ],
      "stopAtEntry": false,
      // "customLaunchSetupCommands": [
      //   { "text": "target-run", "description": "run target", "ignoreFailures": false }
      // ],
      "cwd": "${workspaceFolder}",
      "launchCompleteCommand": "exec-run",
      "environment": [
        {
          "name": "cgocheck",
          "value": "2"
        },
        {
          "name": "GOGC",
          "value": "1"
        },
        {
          "name": "asyncpremptoff",
          "value": "1"
        }
      ],
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "sourceFileMap": {}
    },
    {
      "name": "gdb-cgo-it",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/godot_engine/bin/godot.x11.tools.64.llvm",
      "args": [
        "-v",
        "-d",
        "--path",
        "integration_tests/cgo/project"
      ],
      "stopAtEntry": false,
      // "customLaunchSetupCommands": [
      //   { "text": "target-run", "description": "run target", "ignoreFailures": false }
      // ],
      "cwd": "${workspaceFolder}",
      "launchCompleteCommand": "exec-run",
      "environment": [
        {
          "name": "cgocheck",
          "value": "2"
        },
        {
          "name": "GOGC",
          "value": "1"
        }
      ],
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "sourceFileMap": {}
    },
    {
      "name": "run generate class",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/main.go",
      "args": [
        "--verbose",
        "--classes"
      ],
      "cwd": "${workspaceFolder}",
    }
  ]
}